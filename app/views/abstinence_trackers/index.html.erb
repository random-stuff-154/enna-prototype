<style>
  body {
    font-family: Helvetica, Arial, sans-serif;
    color: #032615;
    background: #032615;
    text-align: center;
    font-size: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }

  h1 {
    font-size: 24px;
    margin-bottom: 0.5rem;
    margin-top: 0.5rem;
  }

  h2 {
    font-size: 20px;
  }

  h4 {
    font-size: 18px;
  }

  p {
    font-size: 16px;
  }

  a {
    color: #000000;
    font-weight: 400;
    font-size: 14px;
    line-height: 18px;
    text-decoration: none;
  }

  .toggle-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 0rem;
    padding-top: 1rem;
  }

  .toggle {
    display: flex;
    align-items: center;
    background-color: #032615;
    border-radius: 20px;
    cursor: pointer;
    position: relative;
    transition: all 0.3s ease-in-out;
  }

  .toggle-option {
    font-family: Helvetica, Arial, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    padding-left: 1rem;
    padding-right: 1rem;
    border-radius: 20px;
    color: #EEF2E6;
    position: relative;
    z-index: 1;
    font-size: 1rem;
    width: 100%;
    height: 100%;
  }

  .toggle-option.selected {
    color: #032615;
    position: relative;
    text-align: center;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    padding-left: 1rem;
    padding-right: 1rem;
  }


  .toggle-slider {
    background-color: #EEF2E6;
    border-radius: 20px;
    position: absolute;
    top: 0;
    bottom: 0;
    width: 109px;
    transition: all 0.3s ease-in-out;
    
  }

  .circle {
    display: inline-block;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    text-align: center;
    line-height: 30px;
    font-size: 16px;
    color: #000000;
    position: relative;
  }

  .circle:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 2px solid #A5A5A5;
    box-sizing: border-box;
  }

  .grey {
    background-color: rgba(165, 165, 165, 0.6);
  }

  .lightblue {
    background-color: rgba(0, 0, 255, 0.3);
  }

  .green {
    background-color: rgba(11, 172, 0, 0.6);
  }

  .red {
    background-color: rgba(233, 32, 32, 0.6);
  }

  .circle:before {
    display: none;
  }

  .circle-background {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }

  .calendar-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .calendar-nav a {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: #032615;
    color: #EEF2E6;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.2s ease;
    width: 95px; 
    text-align: center;
  }

  .calendar-nav a:hover {
    background-color: #0a4b2a;
  }

  .simple-calendar {
    width: 100%;
  }

  .simple-calendar .calendar-heading {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 18px;
    color: #032615;
  }

  .simple-calendar .calendar-heading a {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: #032615;
    color: #EEF2E6;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.2s ease;
    width: 95px; 

  }

  .simple-calendar .calendar-heading a:hover {
    background-color: #0a4b2a;
  }

  .simple-calendar .month-view {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .day-number {
    position: absolute;
    top: 5px;
    left: 5px;
    font-size: 0.8rem;
    color: #0a4b2a;
  }

  .progress {
    background-color: #EEF2E6;
    height: 1.5rem;
    max-width: 80%;
    margin: 1rem auto;
  }

  .progress-bar {
    background-color: green;
  }

  .progress-bar.failure {
  background-color: red;
  }

  .edit-goal-button {
    display: inline-block;
    padding: 0.5rem 1rem;
    font-size: 14px;
    background-color: #032615;
    color: #EEF2E6;
    text-decoration: none;
    border-radius: 5px;
  }

  .calendar-card {
    background-color: #EEF2E6;
    padding: 1rem;
    border-radius: 10px 10px 0 0; /* Changed to make bottom left and bottom right border radius 0 */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    z-index: 0;
    margin-bottom: -5rem; 
    margin-top: 0px;
    margin-left: 20px;
    margin-right: 20px;
    text-align: center;
    position: relative;
    width: calc(100% - 40px);
    padding-bottom: 50px;
  }

.calendar-card .circle-background {
  background-color: #A5A5A5;
}
  .info-card {
    background-color: #FFFFFF;
    padding: 1rem;
    border-radius: 25px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    margin-bottom: 10rem;
    margin-top: 360px;
    margin-left: 20px;
    margin-right: 20px;
    text-align: center;
    position: absolute;
    top: 90px;  
    left: 0;
    z-index: 0;
    width: calc(100% - 40px);
    padding-bottom: 50px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const calendarElements = document.querySelectorAll('.circle');

    calendarElements.forEach(function(element) {
      element.removeAttribute('data-background-color');
    });
  });

</script>

<div class="toggle-container">
  <div class="toggle">
    <div class="toggle-slider" style="<%= 'left: 0;' if request.path == '/abstinence_trackers' %><%= 'left: 50%;' if request.path == '/habit_trackers' %>"></div>
    <div class="toggle-option <%= 'selected' if request.path == '/abstinence_trackers' %>" onclick="location.href='/abstinence_trackers'">Abstinence</div>
    <div class="toggle-option <%= 'selected' if request.path == '/habit_trackers' %>" onclick="location.href='/habit_trackers'">Habit</div>
  </div>
</div>

<h1>Abstinence tracker</h1>

<% current_day = Time.now.day %>

<div class="calendar-card">
  <%= month_calendar events: @user_abstinence_trackings do |date, trackers| %>
    <% tracker = trackers.first %>
    <% background_color = if date.day == current_day%>
      lightblue
    <% elsif tracker && tracker.abstained.nil? %>
      grey
    <% elsif tracker && !tracker.abstained %>
      red
    <% elsif tracker && tracker.abstained %>
      green
    <% elsif within_abstinence_goal?(date) %>
      grey
    <% else %>
      none
    <% end %>
    <div class="circle <%= background_color %>">
      <%= link_to edit_abstinence_tracker_path(tracker ? tracker.date.strftime('%Y-%m-%d') : date) do %>
        <%= date.day %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="info-card">
  <% if @current_abstinence_goal && @current_abstinence_goal.length.present?  %>
    <div id="abstinenceGoalContent">
      <h4>Abstinence Goal Progress</h4>
      
      <div class="progress mb-3">
        <% if @current_abstinence_goal.achieved == false %>
          <div class="progress-bar failure" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
        <% else %>
          <div class="progress-bar" role="progressbar" aria-valuenow="<%= @progress %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @progress.is_a?(Numeric) ? @progress : 0 %>%"></div>
        <% end %>
      </div>

      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="card mr-3">
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <div style="margin-right: 25px ;">
                <p class="mb-2" style="margin-bottom: auto;"><%= @current_abstinence_goal.start_date.strftime("%-d %b") %></p>
                <hr class="my-1">
                <p style="margin-bottom: auto;"><%= (@current_abstinence_goal.start_date + @current_abstinence_goal.length.days).strftime("%-d %b") %></p>
              </div>
              <div>
                <p class="font-weight-bold" style="font-size: 1.2rem; margin-bottom: auto;"><%= @current_abstinence_goal.length %></p>
                <p class="font-weight-bold" style="font-size: 1.2rem; margin-bottom: auto;">days</p>
              </div>
            </div>
          </div>
        </div>
        <div style="width: 150px;">
          <% if @current_abstinence_goal.achieved == false %>
            <p class="mb-2" style="margin-bottom: auto;">Try a new goal?</p>
            <%= link_to "Edit Goal", new_abstinence_goal_path, class: "edit-goal-button btn btn-secondary" %>
          <% else %>
            <%= link_to "Edit Goal", new_abstinence_goal_path, class: "edit-goal-button btn btn-secondary" %>
          <% end %>
          
        </div>
      </div>
    </div>
  <% else %>
    <div id="noAbstinenceGoalContent">
      <h2>No abstinence goal set</h2>
      <%= link_to "Set Goal", new_abstinence_goal_path, class: "edit-goal-button btn btn-primary" %>
    </div>
  <% end %>
</div>

